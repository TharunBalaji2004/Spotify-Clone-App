<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile_avatar_cropped">
                </ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Library"
                    android:fontFamily="@font/gothammedium"
                    android:layout_marginStart="10dp"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:textColor="@color/white">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/spotify_search_icon" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/plus_icon" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contents_bg"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="Music"
                    android:textSize="13dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/circularspotifymedium"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contents_bg"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="Artists"
                    android:textSize="13dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/circularspotifymedium"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contents_bg"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="Podcasts"
                    android:textSize="13dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/circularspotifymedium"
                    android:textColor="@color/white" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/jumpbackin1"></ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/circularspotifymedium"
                                android:text="Kollywood Cream"
                                android:textColor="@color/white"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/circularspotifymedium"
                                android:text="Playlist • Spotify"
                                android:textColor="#989898"
                                android:textSize="12dp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/mixes6"></ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/circularspotifymedium"
                                android:text="Trending in Malayalam"
                                android:textColor="@color/white"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/circularspotifymedium"
                                android:text="Playlist • Spotify"
                                android:textColor="#989898"
                                android:textSize="12dp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/mixes1"></ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/circularspotifymedium"
                                android:text="Romantic Mix"
                                android:textColor="@color/white"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/circularspotifymedium"
                                android:text="Playlist • Spotify"
                                android:textColor="#989898"
                                android:textSize="12dp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@drawable/navbar_bg">

            <LinearLayout
                android:id="@+id/layout_home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_home"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/spotify_home_icon" />

                <TextView
                    android:id="@+id/text_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Home"
                    android:textColor="#989898" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_search"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/spotify_search_icon"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:id="@+id/text_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Search"
                    android:fontFamily="@font/circularspotifymedium"
                    android:textColor="#989898" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_library"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_library"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/spotify_library_icon_clicked"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:id="@+id/text_library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Your Library"
                    android:fontFamily="@font/circularspotifymedium"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_premium"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_premium"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/spotify_main_icon"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:id="@+id/text_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Premium"
                    android:fontFamily="@font/circularspotifymedium"
                    android:textColor="#989898" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>