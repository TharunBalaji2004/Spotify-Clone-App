<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#2b2a2b"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:fontFamily="@font/gothammedium"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/white">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_goback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/goback_icon">
                    </ImageView>


                </LinearLayout>





            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/profile_avatar_cropped">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Tharun Balaji"
                            android:fontFamily="@font/gothammedium"
                            android:textSize="25dp"
                            android:textColor="@color/white">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularspotifymedium"
                            android:textColor="#989898"
                            android:textSize="12dp"
                            android:text="0 followers â€¢ 0 following"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/circularspotifymedium"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:text="Email "/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/circularspotifymedium"
                                android:textColor="#989898"
                                android:textSize="12dp"
                                android:text="tharunbalaji31@gmail.com"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@drawable/navbar_bg">

            <LinearLayout
                android:id="@+id/layout_home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_home"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/spotify_home_icon" />

                <TextView
                    android:id="@+id/text_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Home"
                    android:textColor="#989898" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_search"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/spotify_search_icon"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:id="@+id/text_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Search"
                    android:fontFamily="@font/circularspotifymedium"
                    android:textColor="#989898" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_library"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_library"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/spotify_library_icon_clicked"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:id="@+id/text_library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Your Library"
                    android:fontFamily="@font/circularspotifymedium"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_premium"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_premium"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/spotify_main_icon"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:id="@+id/text_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Premium"
                    android:fontFamily="@font/circularspotifymedium"
                    android:textColor="#989898" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>



</LinearLayout>